{
  "app": {
    "label": "Application Core",
    "description": "Core app permissions (workspace-wide, collaboration, billing, etc.)",
    "categories": {
      "workspace": {
        "label": "Workspace",
        "permissions": [
          {
            "key": "app.workspace.create_workspace",
            "label": "Create Workspace",
            "description": "Allows creating a new workspace",
            "defaultStatus": true
          },
          {
            "key": "app.workspace.delete_workspace",
            "label": "Delete Workspace",
            "description": "Allows deleting a workspace",
            "defaultStatus": false
          }
        ]
      },
      "billing": {
        "label": "Billing",
        "permissions": [
          {
            "key": "app.billing.view_billing",
            "label": "View Billing",
            "description": "Allows viewing billing info",
            "defaultStatus": true
          },
          {
            "key": "app.billing.manage_billing",
            "label": "Manage Billing",
            "description": "Allows updating billing info",
            "defaultStatus": false
          }
        ]
      },
      "collaboration": {
        "label": "Collaboration",
        "permissions": [
          {
            "key": "app.collaboration.view_users",
            "label": "View Users",
            "description": "Allows viewing workspace users",
            "defaultStatus": true
          },
          {
            "key": "app.collaboration.invite_users",
            "label": "Invite Users",
